<h1>Favorite</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  <% @favorites.each do |f| %>
  <tr>
    <td><%= image_tag (f.picture.image.url) %></td>
    <td><%= f.picture.user.name %></td>
    <td><%= f.picture.content %></td>
    <td><%= link_to 'Show', f.picture, class:"btn-outline-secondary btn-sm" %></td>
  </tr>
  <% end %>
  </tbody>
</table>
