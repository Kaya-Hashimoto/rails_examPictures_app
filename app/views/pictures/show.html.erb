<p>
  <strong>Image:</strong>
  <%= image_tag @picture.image.url %>
</p>

<p>
  <strong>Content:</strong>
  <%= @picture.content %>
</p>

<% unless @picture.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-outline-danger btn-sm' %>
  <% else %>
    <%= link_to 'お気に入り登録', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-outline-primary btn-sm' %>
  <% end %>
<% end %>
<% if current_user.id == @picture.user.id %>
  <%= link_to 'Edit', edit_picture_path(@picture), class: "btn-outline-dark btn-sm" %> |
<% end %>
<%= link_to 'Back', pictures_path, class: "btn btn-outline-dark btn-sm" %>
